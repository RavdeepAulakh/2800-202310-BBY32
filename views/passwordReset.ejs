<!-- This code includes the header template and displays a password reset form, then includes the footer template. -->

<!-- Include the "header" template -->
<%- include("templates/header") %>

<!-- Container with flex layout and centered items, occupying the full screen -->
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">

  <!-- Container for the heading -->
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <!-- Heading for the password reset section -->
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 option">Reset your Password</h2>
  </div>

  <!-- Container for the password reset form -->
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" action="/password-reset" method="POST">
      <!-- Input field for email address -->
      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-gray-900 option">Email address</label>
        <div class="mt-2">
          <input id="email" name="email" type="email" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 option">
        </div>
      </div>

      <!-- Submit button for confirming the password reset -->
      <div class="option">
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hov">Confirm</button>
      </div>
    </form>

  </div>
</div>

<!-- Include the "footer" template -->
<%- include("templates/footer") %>
