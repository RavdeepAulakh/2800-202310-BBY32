<%- include("templates/header") %>

<section>
  <div class="row">
    <div class="col-12 option">
      <div class="mb-4">
        <div class="text-center">
          <img
            src="<%=logoUrl %>"
            alt="<%=carData.manufacturer %> Logo"
            class="mx-auto"
            style="width: 250px"
          />
          <div class="mt-3">
            <h1 class="text-4xl font-bold">Estimated Market Value: $<%= price %></h1>
            <br />
            <p>
              <%=carData.year %> <%=carData.manufacturer %> <%=carData.model %>
            </p>
            <p>
              Mileage: <%=carData.odometer %> Condition: <%=carData.condition %>
              Title Status: <%=carData.title_status %>
            </p>
          </div>
          <br />
          <div class="mt-3">
            <div class="max-w-lg mx-auto">
              <h2 class="text-xl font-bold">About this car:</h2>
              <div class="mt-4 text-left">
                <p class="px-4 py-2 bg-gray-200 rounded-lg"><%= advice %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("templates/footer") %>
