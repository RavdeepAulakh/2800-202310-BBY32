<!-- This code defines the basic structure and styling for a header. -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Page title -->
  <title>Cargain</title>

  <!-- Link to the Bootstrap CSS framework -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Link to the Tailwind CSS framework -->
  <link rel="stylesheet" href="https://unpkg.com/tailwindcss@2.2.15/dist/tailwind.min.css" />

  <!-- Link to custom stylesheet -->
  <link rel="stylesheet" href="/styles.css" />

  <!-- Link to favicon -->
  <link rel="icon" href="/logo.ico" type="image/x-icon" />
</head>

<body>
  <!-- Navigation bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <!-- Toggle button for collapsible navigation menu -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible navigation menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if (isUserAuthenticated) { %>
          <div class="navbar-nav  mr-auto mt-2 mt-lg-0">
            <a class="navbar-brand" href="/loggedin" style="padding-left: 10px;">Cargain</a>
            <a class="nav-item nav-link" href="/chat">Search</a>
            <a class="nav-item nav-link" href="/priceChat">Buy/Sell</a>
            <a class="nav-item nav-link" href="/garage">Recents</a>
            <a class="nav-item nav-link" href="/logout">Log out</a>
          </div>
          <a class="nav-item nav-link my-2 my-lg-0"  href="/userProfile">
            <img id="navAvatar" class="mr-2" src="<%= avatar %>" alt="image" width="30" height="30">
            <a class="sm:text-center pad"><%= userName %></a>
          </a>
      <% } else { %>
        <div class="navbar-nav  mr-auto mt-2 mt-lg-0">
          <a class="navbar-brand" href="/" style="padding-left: 10px;">Cargain</a>
          <a class="nav-item nav-link" href="/createUser">Sign up</a>
          <a class="nav-item nav-link" href="/login">Sign in</a>
        </div>
      <% } %>
    </div>
  </nav>

  <!-- Link to the Bootstrap JavaScript bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Body with custom styling -->
  <body class="flex flex-col min-h-screen bg-gradient-to-tr from-white to-purple-200">
